<Window x:Class="MVVM_example.ButtonColorChange"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM_example"
        mc:Ignorable="d"
        Title="ButtonColorChange" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnColorChange" Content="Button" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="181" Height="67" Click="btnColorChange_Click"/>
        <Label x:Name="lblColorOfBox" Content="Color of Box" HorizontalAlignment="Left" Margin="10,82,0,0" VerticalAlignment="Top" Height="59" Width="160"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="198,86,0,0" TextWrapping="Wrap" Text="{Binding colorText}" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnColorToChange" Content="Button" HorizontalAlignment="Left" Margin="311,226,0,0" VerticalAlignment="Top" Width="234" Height="126">
            <Button.Background>
                <SolidColorBrush Color="{Binding Path=Color}"/>
            </Button.Background>
            
        </Button>

    </Grid>
</Window>
